{
  "$schema": "https://schema.tauri.app/config/2.0.0",
  "productName": "Sound Capsule",
  "version": "1.0.0",
  "identifier": "com.soundcapsule.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devUrl": "http://localhost:3000",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Sound Capsule",
        "width": 1400,
        "height": 900,
        "minWidth": 1200,
        "minHeight": 700,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      {
        "path": "../../data-pipeline/database",
        "target": "database"
      },
      {
        "path": "../../data-pipeline/lua_scripts",
        "target": "lua_scripts"
      }
    ],
    "externalBin": [
      "binaries/capsules_api"
    ]
  },
  "plugins": {
    "shell": {
      "open": true
    }
  }
}
